<Window x:Class="ShoppingStand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingStand"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Title="MainWindow" Width="800" Height="480" Topmost="True">
    <Viewbox StretchDirection="Both" Stretch="UniformToFill">
        <Grid Width="800" Height="450">
            <Frame x:Name="MainContent" Width="800" Height="450" NavigationUIVisibility="Hidden"></Frame>
        </Grid>
    </Viewbox>
</Window>
